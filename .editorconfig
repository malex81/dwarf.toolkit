# To learn more about .editorconfig see https://aka.ms/editorconfigdocs
root = true

# All files
[*.{cs,js,xaml,axaml}]
indent_style = tab

# C# code
[*.cs]
# используйте конкретные типы, если это возможно для повышения производительности
dotnet_diagnostic.CA1859.severity = none
# Использование основного конструктора
dotnet_diagnostic.IDE0290.severity = silent
# Кривое упрощение создания коллекций
dotnet_diagnostic.IDE0305.severity = silent
dotnet_diagnostic.IDE0306.severity = silent
# Упростить имя - глючит с nullable типами
dotnet_diagnostic.IDE0001.severity = none
# namespace не соответсвует пути
dotnet_diagnostic.IDE0130.severity = silent
# CA1822: Mark members as static
dotnet_diagnostic.CA1822.severity = silent	
# Предлагает заменять сравнение через ToLower() на StringComparer.CurrentCultureIgnoreCase, при этом не учитывает контекст использования, не видит в какой запрос это будет транслироваться
dotnet_diagnostic.CA1862.severity = none
# Ошибки генерации кода
dotnet_diagnostic.CS8785.severity = error   